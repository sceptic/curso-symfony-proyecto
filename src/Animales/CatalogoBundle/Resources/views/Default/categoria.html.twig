{% extends '::base.html.twig' %}
{% block content -%}

<div class="col-md-7 jumbotron text-center">
<h1>{{category[0].name}}</h1>
<img class="img-circle" src="{{asset('bundles/assets/img/'~category[0].slug~'.jpg')}}" style="width: 300px; height: 300px;" alt="300x300"></img>
</div>

<div class="col-md-4 navbar-right text-center">
	{%if  category[0][0] is defined %}
	{% for sub in category %}
		{% if  sub.number_products > 0 %}
        <a class="list-group-item active" href="{{path( 'productos', {'slug':sub[0].slug})}}">{{sub[0].name}}<span class="badge">{{sub.number_products}}</span></a>
		{% else %}
    		<span class="list-group-item">{{sub[0].name}}<span class="badge">{{sub.number_products}}</span></span>
    	{% endif %}
    {% endfor%}
    {%else%}
    	<a class="list-group-item" href="#">{{'no.category'|trans}}</a>

    {%endif%}

          </div>
{% endblock %}
