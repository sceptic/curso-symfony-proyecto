{% extends 'AdminSettingsBundle::layout.html.twig' %}

{% block adminHeading -%}Listado de productos{% endblock %}
{% block admin %}
<table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Imágen</th>
                <th>Nombre</th>
                <th>Nombre url</th>
                <th>Subcategoria</th>
                <th>Ean13</th>
                <th>Descripcón</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('product_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{entity.image.path}}</td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.slug }}</td>
                <td>{{ entity.subcategory.name }}</td>
                <td>{{ entity.ean13 }}</td>
                <td>{{ entity.description }}</td>
                <td>
                
                    <a class='btn btn-default' href="{{ path('product_show', { 'id': entity.id }) }}">Ver</a>
                
                    <a class='btn btn-default' href="{{ path('product_edit', { 'id': entity.id }) }}">Editar</a>

                </td>
            </tr>
        {% endfor %}
        </tbody>
        <tfoot>
            <tr><td colspan="8"><p><a class="btn btn-default" href="{{ path('product_new') }}">Nuevo producto</a></p></td></tr>
        </tfoot>
    </table>
{% endblock %}

