{% extends 'AdminSettingsBundle::base.html.twig' %}
{% block adminHeading -%}Usuarios{% endblock %}
{% block admin -%}


    <table class="table table-striped">
        <thead>
        
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>Password</th>
                <th>Salt</th>
                <th>Active</th>
                <th>Role</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('user_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.password [:6]}} ...</td>
                <td>{{ entity.salt [:6]}} ...</td>
                <td>{{ entity.active }}</td>
                <td>{{ entity.role }}</td>
                <td>
                        <a class="btn btn-default"  href="{{ path('user_show', { 'id': entity.id }) }}">Ver</a>
                   
                        <a class="btn btn-default"  href="{{ path('user_edit', { 'id': entity.id }) }}">Editar</a>
                    
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

            <a class="btn btn-default" href="{{ path('user_new') }}">
                Nuevo usuario
            </a>
       
    {% endblock %}
