{% extends 'AdminSettingsBundle::base.html.twig' %}

{% block adminHeading -%}Listado de categorias{% endblock %}
{% block admin %}

<div class="table-responsive" >
<table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Slug</th>
                <th> </th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('category_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.slug }}</td>
                <td>
                
                    <a class="btn btn-default" href="{{ path('category_show', { 'id': entity.id }) }}">Ver</a>          
                    <a class="btn btn-default" href="{{ path('category_edit', { 'id': entity.id }) }}">Editar</a>
                    
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
<a class="btn btn-default"  href="{{ path('category_new') }}">
                Create a new entry
            </a>
</div>
{% endblock %}
