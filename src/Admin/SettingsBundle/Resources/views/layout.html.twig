{% extends '::base.html.twig' %}

{% block content -%}

<div class="panel panel-default col-sm-10">
  <div class="panel-heading">{% block adminHeading %}{% endblock %}</div>
	<div class="panel-body">
    {% block admin %}{% endblock %}
    </div>
</div>

<div class="col-sm-2">
<div class="list-group">
  <a href="{{path('category')}}" class="list-group-item active">
    <h4 class="list-group-item-heading">Categorias</h4>
  </a>
  <a href="{{path('subcategory')}}" class="list-group-item active">
    <h4 class="list-group-item-heading">Subcategorias</h4>
  </a>
  <a href="{{path('product')}}" class="list-group-item active">
    <h4 class="list-group-item-heading">Productos</h4>
  </a>
</div>

</div>  

{% endblock %}



{% block scripts %}
<script>
$(document).ready(function (){

	$("form div").addClass('form-group');
	$("input[type='text'], select").addClass('form-control');
	$("form button[type='submit']").addClass('btn btn-primary');
	$("form input[type='text']").addClass('form-control');
});	

</script>


{% endblock %}
