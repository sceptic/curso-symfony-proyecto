+Ejercicio 2

YML:
recipes_show:
    path:  /recipes/{id}
    defaults: { _controller: MyRecipesBundle:Recipe:show }
    requirements:
        recipe: \d+

recipes_show_seo:
    path:  /recetas/{id}
    defaults: { _controller: MyRecipesBundle:Recipe:show }


ANNOTATION:
/**
 * @Route("/recipe/{id}", name="recipes_show", requirements={"id" = "\d+"})
 * @Route("/recetas/{id}",name="recipes_show_seo" )
 * @Template()
 */