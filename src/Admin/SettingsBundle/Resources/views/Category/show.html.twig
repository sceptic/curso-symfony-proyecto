{% extends 'AdminSettingsBundle::layout.html.twig' %}

{% block adminHeading -%}Categoria{% endblock %}
{% block admin %}
<table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ entity.slug }}</td>
            </tr>
        </tbody>
    </table>
    <hr/>
<a class="btn btn-default" href="{{ path('category') }}">
            Volver a la lista
        </a>
<a class="btn btn-default" href="{{ path('category_edit', { 'id': entity.id }) }}">
            Editar
        </a>
{{ form(delete_form) }}
{% endblock %}


